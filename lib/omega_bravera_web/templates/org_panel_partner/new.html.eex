<div class="card">
    <div class="card-body">
        <h1><span class="fa fa-group"></span> <%= gettext("New Group") %></h1>
        <div class="row my-3">
            <div class="col-9">
                <small class="text-muted">
                    <%= gettext("(Get started by creating your first group. Follow the instructions as you proceed)") %>
                </small>
            </div>
        </div>
        <%= render "_form.html", assigns %>
    </div>
</div>

<div class="modal fade" id="group_create_redirect" tabindex="-1" role="dialog" aria-labelledby="group_create_redirect_modal" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p><%= gettext("Great. You’ve created your first Group. ") %></p>
                <br>
                <p><%= gettext("Next, you’ll be asked to add images to the Group. ") %></p>
                <br>
                <p><%= gettext("You can go back and Edit the Group, or you can Add Images.") %></p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="$('#first_5_groups_submit_btn').click()"><%= gettext("Save & Add Images") %></button>
                <button class="btn btn-primary" onclick="redirectToEditGroup()"><%= gettext("Go Back & Edit 
") %></button>
            </div>
        </div>
    </div>
</div>

<script>
    function redirectToEditGroup() {
        $("#group_form").attr("action", "<%= @edit_action %>");
        $("#first_5_groups_submit_btn").click();
    }
</script>
