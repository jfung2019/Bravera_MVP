<div class="card ngo-stats-card">
   <div class="card-body">
      <div class="container">
         <div class="mb-3 mx-lg-3">
            <div class="text-420 mt-2 mb-1 ml-1 text-left stats-font">
               Fundraising Goal:
               <strong class="text-500 float-right"><%= "#{currency_to_symbol(@ngo.currency)}#{@ngo.fundraising_goal}" %></strong>
            </div>
            <div class="text-420 mt-2 mb-1 ml-1 text-left stats-font">
              Pledged to date:
              <span class="float-right">
                <strong class="text-500">
                  <%= "#{currency_to_symbol(@ngo.currency)}#{@ngo.total_pledged || 0 }" %>
                  <span class="text-green">(<%= render_percentage_exceed(@ngo.total_pledged, @ngo.fundraising_goal) %>%)</span>
                </strong>
              </span>
            </div>
            <%= if !pre_registration_ngo?(@ngo) do %>
              <div class="text-420 mt-2 mb-1 ml-1 text-left stats-font">
                Secured to date:
                <span class="float-right">
                  <strong class="text-500">
                    <%= "#{currency_to_symbol(@ngo.currency)}#{@ngo.total_secured || 0 }" %>
                    <span class="text-green">(<%= render_percentage_exceed(@ngo.total_secured, @ngo.fundraising_goal) %>%)</span>
                  </strong>
                </span>
              </div>
            <% end %>
            <div class="text-420 mt-2 mb-1 ml-1 text-left stats-font">
               Participants:
               <strong class="text-500 float-right"><%= @ngo.num_of_challenges || 0 %></strong>
            </div>
            <%= if !pre_registration_ngo?(@ngo) do %>
              <div class="text-420 mt-2 mb-1 ml-1 text-left stats-font">
                Distance Travelled:
                <strong class="text-500 float-right"><%= @ngo.total_distance_covered || 0 %> KM</strong>
              </div>
              <div class="text-420 mt-2 mb-1 ml-1 text-left stats-font">
                Calories Burned:
                <strong class="text-500 float-right"><%= @ngo.total_calories || 0 %> Calories</strong>
              </div>
            <% else %>
              <div class="text-500 text-center mt-2 mb-0 stats-font">Challenge starts</div>
              <div class="text-center text-danger" On <%= render_date(@ngo.launch_date) %> </div>

            <% end %>
            <div style="clear: both;"></div>
         </div>
      </div>
   </div>
</div>