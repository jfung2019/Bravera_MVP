<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Bravera: Fundraise while you Train with Fitness with Impact">
    <meta name="author" content="Bravera.co">

    <meta property="og:title" content="Bravera.co | Fitness with Impact" />
    <meta property="og:type" content="fitness.fundraising" />
    <meta property="og:url" content="https://www.bravera.co" />
    <meta property="og:image" content="<%= Routes.static_path(@conn, "/images/bravera_stacked_small.jpg") %>" />
    <%= csrf_meta_tag() %>

    <title><%= gettext("Bravera - Admin") %></title>
    <link rel="stylesheet" href="<%= Routes.static_path(@conn, "/css/app.css") %>">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.css">
    <script src="<%= Routes.static_path(@conn, "/js/app.js") %>"></script>
  </head>

  <body class="gray-background pt-5">
    <div class="text-center">
      <p class="alert alert-success" role="alert"><%= get_flash(@conn, :info) %></p>
      <p class="alert alert-danger" role="alert"><%= get_flash(@conn, :error) %></p>
    </div>

    <section class="container-fluid flex-grow px-0 px-sm-3">
      <div class="row">
      <%= if logged_in?(@conn) && is_admin?(@conn) do %>
        <div class="col-lg-2">
          <div class="admin-nav-menu py-3 pl-2">
            <h6><%= gettext("Super Admin Options") %></h6>
            <ul class="nav flex-column">
              <li class="nav-item">
                <%= link(gettext("Email Categorization"), to: Routes.admin_panel_emails_path(@conn, :index), class: "nav-link") %>
              </li>
              <li class="nav-item">
                <%= link(gettext("Users"), to: Routes.admin_panel_user_path(@conn, :index), class: "nav-link") %>
              </li>
              <li class="nav-item">
                <%= link(gettext("Locations"), to: Routes.admin_panel_locations_path(@conn, :index), class: "nav-link") %>
              </li>
              <li class="nav-item">
                <%= link(gettext("Points"), to: Routes.admin_panel_points_path(@conn, :new), class: "nav-link") %>
              </li>
              <li class="nav-item">
                <%= link(gettext("NGO"), to: Routes.admin_panel_ngo_path(@conn, :index), class: "nav-link") %>
              </li>
              <li class="nav-item">
                <%= link(gettext("Activities"), to: Routes.admin_panel_offer_challenge_activity_path(@conn, :new), class: "nav-link") %>
              </li>
            </ul>
            <h6><%= gettext("Normal User Options") %></h6>
            <ul class="nav flex-column">
              <li class="nav-item">
                <%= link(gettext("Claim IDs"), to: Routes.admin_panel_offer_vendor_path(@conn, :index), class: "nav-link") %>
              </li>
              <li class="nav-item">
                <%= link(gettext("Groups"), to: Routes.admin_panel_partner_path(@conn, :index), class: "nav-link") %>
              </li>
              <li class="nav-item">
                <%= link(gettext("Offers"), to: Routes.admin_panel_offer_path(@conn, :index), class: "nav-link") %>
              </li>
              <li class="nav-item">
                <%= link(gettext("Rewards"), to: Routes.admin_panel_offer_reward_path(@conn, :index), class: "nav-link") %>
              </li>
              <li class="nav-item">
                <%= link gettext("Logout"), to: Routes.admin_user_session_path(@conn, :delete), class: "nav-link", method: :delete %>
              </li>
            </ul>
          </div>
        </div>
      <% end %>
        <div class="col">
            <%= @inner_content %>
        </div>
      </div>
    </section>

    <footer class="footer">
      <div class="container">
				<nav class="navbar navbar-expand">
          <ul class="navbar-nav">
	          <li class="nav-item">
	            <%= link("Privacy", to: "https://www.bravera.fit/privacy/", target: "_blank") %>
	          </li>
	          <li class="nav-item">
	            <%= link("Terms of Use", to: "https://www.bravera.fit/terms", target: "_blank") %>
						</li>
          </ul>
        </nav>
      </div>
    </footer>
    <%= if assigns[:google_analytics_id] do %>
        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=<%= assigns[:google_analytics_id] %>"></script>
        <script>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());

          gtag('config', '<%= assigns[:google_analytics_id] %>');
        </script>
    <% end %>
  </body>
</html>
