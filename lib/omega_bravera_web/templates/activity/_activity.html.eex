<div class="row">
  <div class="col-md-6">Date</div>
  <div class="col-md-6">Distance</div>
</div>
<%= for activity <- @activities do %>
  <div class="row">
    <div class="col-md-6"><%= Timex.format!(activity.start_date, "%b %d", :strftime) %></div>
    <div class="col-md-6"><%= activity.distance %> Km</div>
  </div>
<% end %>
