<div class="container">
    <%= if @offer_redeem.status == "expired" do %>
      <h2 class="mt-2 mb-2"><%= gettext("Redemption Expired") %></h2>
    <% else %>
      <h2 class="mt-2 mb-2"><%= gettext("New Redemption") %></h2>
      <%= render "redeem_form.html", Map.put(assigns, :action, Routes.offer_offer_challenge_offer_challenge_path(@conn, :save_redeem, @offer_challenge.offer.slug, @offer_challenge.slug, @offer_redeem.token)) %>
    <% end %>
</div>