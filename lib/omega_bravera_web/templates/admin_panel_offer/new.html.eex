<div class="card">
    <div class="card-body">
        <h2>
            <span class="fa fa-<%= if @offer_type == :online, do: "cart-arrow-down", else: "credit-card" %>"></span>
            <%= "#{gettext("New")} #{gettext_offer_type(@offer_type)} #{gettext("Offers")}" %>
        </h2>
        <%= render "form.html", Map.put(assigns, :action, Routes.admin_panel_offer_path(@conn, :create, offer_type: @offer_type)) %>
        <span><%= link gettext("Back"), to: Routes.admin_panel_offer_path(@conn, :online) %></span>
    </div>
</div>