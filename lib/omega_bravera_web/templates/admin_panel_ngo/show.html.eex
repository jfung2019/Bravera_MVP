<div class="card">
	<div class="card-body">
		<h2><%= gettext("%{ngo}'s Challenges", ngo: @ngo.name) %>:</h2>
		<%= link("Download Opt-in mailing list", to: Routes.admin_panel_ngo_path(@conn, :export_ngo_opt_in_mailing_list, @ngo.slug)) %>
		<ul>
			<%= for ngo_chal <- @ngo.ngo_chals do %>
				<li><%= ngo_chal.slug %></li>
			<% end %>
		</ul>
		<span><%= link gettext("Back"), to: Routes.admin_panel_ngo_path(@conn, :index) %></span>
	</div>
</div>